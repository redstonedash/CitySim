
using System.Drawing;
/* Behvaiors *

new Point(x, y)
Point.X
Point.Y
*/

public class Grid<T>
{
	private T[,] grid;
	private int width;
	private int height;
	
	public Grid (int width, int height, T def_value)
	{
		this.grid   = new T[width, height];
		
		this.width  = grid.GetLength(0);
		this.height = grid.GetLength(1);
		
		// fill grid with default
		for (var w = 0; w < width; w++)
			for (var h = 0; h < height; h++)
				this.grid[w, h] = def_value;
	}
	
	public T Read (Point point) // exceptions: Out of Bounds
	{
		return this.grid[point.X, point.Y];
	}
	
	public void Write (Point point, T val) // exceptions: Out of Bounds
	{
		this.grid[point.X, point.Y] = val;
	}
}
