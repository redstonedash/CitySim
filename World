
public class Grid<T>
{
	private T[,,] grid;
	
	public Grid (int width, int height, int depth, T filler)
	{
		this.grid   = new T[width, height, depth];
		
		for (var w = 0; w < width; w++)
			for (var h = 0; h < height; h++)
				this.grid[w, h] = filler;
	}
	
	public int Depth ()
	{
		return this.grid.GetLength(2);
	}
	
	public int Height ()
	{
		return grid.GetLength(1);
	}
	
	public int Width ()
	{
		return grid.GetLength(0);
	}
	
	public T Read (int x, int y, int z)
	{
		return this.grid[x, y, z];
	}
	
	public void Write (int x, int y, int z, T val)
	{
		this.grid[x, y, z] = val;
	}
}
