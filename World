
public class Grid<T>
{
	private T[,,] grid;
	
	public Grid (int width, int height, int depth, T filler)
	{
		this.grid = new T[width, height, depth];
		this.Fill(filler);
	}
	
	private void Fill ( T filler )
	{
		for (var x = 0; x < Width(); x++)
		for (var y = 0; y < Height(); y++)
		for (var z = 0; z < Depth(); z++)
			Write(x, y, z, filler);
	}
	
	public int Depth ()
	{
		return this.grid.GetLength(2);
	}
	
	public int Height ()
	{
		return this.grid.GetLength(1);
	}
	
	public int Width ()
	{
		return this.grid.GetLength(0);
	}
	
	public T Read (int x, int y, int z)
	{
		return this.grid[x, y, z];
	}
	
	public void Write (int x, int y, int z, T val)
	{
		this.grid[x, y, z] = val;
	}
}
